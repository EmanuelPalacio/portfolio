---
import NavBtn from './NavBtn.astro';
const { routes, routeLogo = '/#home', goHome } = Astro.props;
---

<nav class='menu'>
  <a href={routeLogo} class='menu__link'
    ><img
      class='menu__img'
      src='./assets/Logo.svg'
      alt='Logo: emanuel palacio'
    /></a
  >
  <ul class='menu__list'>
    {
      routes.map((elem) => {
        return (
          <li class='menu__item'>
            <a class='menu__link' href={elem.href}>
              {elem.routeName}
            </a>
          </li>
        );
      })
    }
    <!-- <li class='menu__item'>
      <a class='menu__link' href='#aboutMe'>Sobre m√≠</a>
    </li>
    <li class='menu__item'>
      <a class='menu__link' href='#proyects'>Proyectos</a>
    </li>
    <li class='menu__item'>
      <a class='menu__link' href='#formContact'>Contacto</a>
    </li> -->
  </ul>
  {
    goHome ? (
      <a href={goHome}>
        <img
          class='menu__img menu__img--goHome'
          src='./assets/icons/home.svg'
          alt='Volver al inicio'
        />
      </a>
    ) : (
      <NavBtn />
    )
  }
</nav>
<style>
  .menu {
    position: fixed;
    top: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100px;
    width: 100%;
    padding: 0 calc(80px / 2);
    background-color: rgba(var(--color-background) / 30%);
    backdrop-filter: blur(10px);
    overflow: hidden;
    z-index: 9;
    transition: height 1s linear;
  }
  .menu__img {
    object-fit: contain;
    width: 120px;
    height: 80px;
  }
  .menu__img--goHome {
    width: 80px;
    height: 60px;
  }
  .menu__list {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 50%;
    font-size: var(--FontSizeRestTitles);
  }
  .menu__item:hover {
    transform: scale(1.1);
  }
  .menu__item:active {
    transform: scale(0.95);
  }

  @media (max-width: 1200px) {
    .menu__list {
      font-size: var(--FontSizeH3);
    }
  }
  @media (max-width: 992px) {
    .menu {
      align-items: flex-start;
      justify-content: space-between;
      padding-top: 25px;
    }
    .menu--open {
      height: 100vh;
    }
    .menu__img {
      object-fit: contain;
      width: 80px;
      height: 50px;
    }
    .menu__list {
      position: absolute;
      flex-direction: column;
      justify-content: center;
      top: 100px;
      left: 0;
      width: 100%;
      height: calc(100vh - 100px);
      gap: 2rem;
      font-size: var(--FontSizeTitle);
    }
    .menu__btn {
      display: block;
    }
  }
</style>
