---
import * as aboutMe from '../content/about_me.md';
import { Section } from '../layouts/index.astro';
import AboutMeSvg from './SVG/AboutMeSvg.astro';
const { Content } = aboutMe;
---

<Section id='aboutMe'>
  <div class='aboutMe__containerSvg'>
    <AboutMeSvg className='aboutMe__svg' />
  </div>
  <div class='aboutMe__content'>
    <h2>{aboutMe.frontmatter.title}</h2>
    <Content />
  </div>
</Section>

<style>
  .aboutMe {
    display: flex;
    width: 100%;
    height: 100vh;
  }
  .aboutMe__introduction {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-bottom: 100px;
    width: 50%;
  }
  .aboutMe__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    width: 50%;
    padding-right: 50px;
  }
  .aboutMe__content > h2 {
    align-self: flex-start;
    width: 100%;
    margin-bottom: 2rem;
    border-bottom: 2px solid rgb(var(--color-details));
  }
  .aboutMe__containerSvg {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50%;
  }
  .aboutMe__svg {
    aspect-ratio: 552 540;
    height: 70%;
    max-height: 500px;
  }
</style>
