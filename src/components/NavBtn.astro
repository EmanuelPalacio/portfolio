<button type='button' title='menu' class='btn'>
  <span></span>
  <span></span>
  <span></span>
</button>

<style>
  .btn {
    display: none;
    position: relative;
    aspect-ratio: 1;
    width: 50px;
    border: 2px solid rgb(var(--color-contrast));
    border-radius: 10px;
    background-color: rgb(var(--color-background));
    cursor: pointer;
  }
  .btn span {
    position: absolute;
    left: calc(50% - 30px / 2);
    width: 30px;
    height: 4px;
    border-radius: 2px;
    background-color: rgb(var(--color-contrast));
    transition: transform 0.5s linear, opacity 0.5s linear;
  }
  .btn span:nth-child(1) {
    transform: translateY(10px);
  }
  .btn span:nth-child(3) {
    transform: translateY(-10px);
  }
  .btn--close span:nth-child(1) {
    transform: translateY(0) rotate(45deg);
  }
  .btn--close span:nth-child(2) {
    opacity: 0;
  }
  .btn--close span:nth-child(3) {
    transform: translateY(0) rotate(-45deg);
  }

  @media (max-width: 992px) {
    .btn {
      display: block;
    }
  }
</style>
<script>
  const menu = document.querySelector('.menu');
  const btn = document.querySelector('.btn');
  const links = document.querySelectorAll('.link');
  btn.addEventListener('click', () => {
    btn.classList.toggle('btn--close');
    menu.classList.toggle('menu--open');
  });
  links.forEach((link) =>
    link.addEventListener('click', () => {
      btn.classList.remove('btn--close');
      menu.classList.remove('menu--open');
    }),
  );
</script>
