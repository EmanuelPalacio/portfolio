    width: 50%;
  }
  .introduction__name {
    color: rgb(var(--text-color-title));
  }
  .introduction__subtitle {
    color: rgb(var(--text-color-alternative));
    font-size: var(--FontSizeH3);
    align-self: flex-start;
  }
  .containerSvg {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50%;
  }
  .containerSvg__svg {
